<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="jsonConverter" class="com.sangame.sow.web.springmvc.converter.MappingJackson2HttpMessageConverter">
		<property name="supportedMediaTypes">
			<list>
				<value>application/json</value>
				<value>application/javascript</value>
			</list>
		</property>
	</bean>

	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
		<property name="messageConverters">
			<list>
				<ref bean="jsonConverter" />
			</list>
		</property>
	</bean>
	
	<context:component-scan base-package="com.sangame.cms.taglib" />
	
	<bean id="taglibRestClient" class="com.sangame.sow.rest.client.RestClient">
		<constructor-arg index="0" ref="restTemplate" />
		<constructor-arg index="1" value="http://${taglib.api.domain}" />
		<constructor-arg index="2" value="${taglib.api.username}" />
		<constructor-arg index="3" value="${taglib.api.password}" />
	</bean>
	
	<context:component-scan base-package="com.sangame.uc.api"/>
	
    <bean id="usercenterRestClient" class="com.sangame.sow.rest.client.RestClient">
        <constructor-arg index="0" ref="restTemplate" />
        <constructor-arg index="1" value="http://${uc.api.domain}" />
        <constructor-arg index="2" value="${uc.api.username}" />
        <constructor-arg index="3" value="${uc.api.password}" />
    </bean>
	
</beans>

